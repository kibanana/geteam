<script>
  function userOpinion_chk() {
    let userOpinion_set = document.userOpinion;
    let userOpinion_result = document.getElementById("userOpinion_result");
    let userOpinionTitle = document.getElementById("userOpinionTitle");
    let userOpinionContent = document.getElementById("userOpinionContent");
    if (userOpinionTitle.value == "" || userOpinionContent.value == "") {
      userOpinion_result.innerHTML = "문의 내용을 입력해주세요!";
    } else {
      userOpinion_set.submit();
    }
  }
</script>

