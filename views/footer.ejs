<script>
  //footer mesasge 유효성검사
  function footer_note_question_chk() {
    let footer_set = document.footer_note_question;
    let footer_result = document.getElementById("footer_note_question_result");
    let footerTitle = document.getElementById("footerTitle");
    let footerContent = document.getElementById("footerContent");
    if (footerTitle.value == "" || footerContent.value == "") {
      footer_result.innerHTML = "문의 내용을 입력해주세요!";
